{
  "name": "Accessibility Mode",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background" : {
    "scripts" : ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage"
  ]
}
